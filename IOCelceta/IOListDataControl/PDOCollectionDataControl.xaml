                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="100" HeaderTemplate="{StaticResource IndexHeadTemplate}" CellTemplate="{StaticResource IndexContentTemplate}"/>
                                        <GridViewColumn Width="200" HeaderTemplate="{StaticResource VariableNameHeadTemplate}" CellTemplate="{StaticResource VariableNameContentTemplate}"/>
                                        <GridViewColumn Width="100" HeaderTemplate="{StaticResource DataTypeHeadTemplate}" CellTemplate="{StaticResource DataTypeContentTemplate}"/>
                                        <GridViewColumn Width="100" HeaderTemplate="{StaticResource UnitHeadTemplate}" CellTemplate="{StaticResource UnitContentTemplate}"/>
                                        <GridViewColumn Width="200" HeaderTemplate="{StaticResource BindingHeadTemplate}" CellTemplate="{StaticResource BindingContentTemplate}"/>
                                        <GridViewColumn Width="120" HeaderTemplate="{StaticResource RangeHeadTemplate}" CellTemplate="{StaticResource RangeContentTemplate}"/>
                                        <GridViewColumn Width="120" HeaderTemplate="{StaticResource ConverterHeadTemplate}" CellTemplate="{StaticResource ConverterContentTemplate}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                    </DockPanel>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../img/lock.png" Height="24" Margin="2,2,8,2"/>
                            <TextBlock Text="Intlk Area" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <GridSplitter Grid.Row="1" Background="Gray" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="4,4,4,4"/>
                        <ListBox Name="__lsb_interlock_logic_definitions" HorizontalContentAlignment="Stretch" Margin="4" ItemsSource="{Binding IntlkLogicArea}" ContextMenu="{StaticResource IntlkContextMenu}" ScrollViewer.CanContentScroll="False">
                            <ListBox.ItemContainerStyle>
                                <Style>
                                    <Setter Property="Control.Padding" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="ListBoxItem.IsSelected" Value="True">
                                            <Setter Property="ListBoxItem.Background" Value="LightYellow"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0" Background="White">
                                        <Border Margin="4" BorderThickness="1" BorderBrush="SteelBlue" CornerRadius="4" Background="{Binding Path=Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}}">
                                            <Grid Margin="3">
                                                <Grid.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Margin" Value="4"/>
                                                    </Style>
                                                </Grid.Resources>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Name : " FontWeight="Bold" Margin="4"/>
                                                <TextBlock Text="{Binding Name}" Grid.Column="1"/>
                                                <TextBlock Text="Target : " Grid.Row="1" FontWeight="Bold"/>
                                                <TextBlock Text="Statement : " Grid.Row="2" FontWeight="Bold"/>

                                                <ListBox ItemsSource="{Binding TargetObjects}" Grid.Row="1" Grid.Column="1" Margin="4">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}" Margin="4"/>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                                <TreeView Margin="4" Grid.Column="1" Grid.Row="2">
                                                    <TreeView.Resources>
                                                    </TreeView.Resources>
                                                    <TreeViewItem ItemsSource="{Binding Statement.Elements}" Header="{Binding Statement.LogicOperator}">
                                                        <TreeViewItem.Resources>
                                                            <HierarchicalDataTemplate ItemsSource="{Binding Elements}" DataType="{x:Type local:IntlkLogicExpression}">
                                                                <TextBlock Text="{Binding LogicOperator}" Margin="4"/>
                                                            </HierarchicalDataTemplate>
                                                            <HierarchicalDataTemplate DataType="{x:Type local:IntlkLogicOperand}">
                                                                <TextBlock Text="{Binding ObjectDataModel}" Margin="4"/>
                                                            </HierarchicalDataTemplate>
                                                        </TreeViewItem.Resources>
                                                    </TreeViewItem>
                                                </TreeView>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Grid Grid.Row="2" Name="__grid_edit_intlk_logic_definition" IsEnabled="False">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name : " FontWeight="Bold" Margin="4"/>
                            <TextBlock Text="Target : " FontWeight="Bold" Grid.Row="1" Margin="4"/>
                            <TextBlock Text="Statement : " FontWeight="Bold" Grid.Row="2" Margin="4"/>

                            <TextBox Grid.Column="1" Margin="4" Name="__txt_edit_intlk_logic_name"/>
                            <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="4">
                                <TextBox TextWrapping="Wrap" Name="__txt_edit_intlk_logic_target" AcceptsReturn="True"/>
                            </ScrollViewer>
                            <ScrollViewer Grid.Column="1" Margin="4" Grid.Row="2" >
                                <TextBox TextWrapping="Wrap" Name="__txt_edit_intlk_logic_statement" AcceptsReturn="True" AcceptsTab="True"/>
                            </ScrollViewer>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="3">
                                <Button Width="100" Margin="4" Height="32" Click="__on_commit_intlk_logic_edit">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="../img/ok.png" Height="24" Margin="2,2,8,2"/>
                                        <TextBlock Text="Commit" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button  Width="100" Margin="4" Height="32" Click="__on_cancel_intlk_logic_edit">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="../img/cancel.png" Height="24" Margin="2,2,8,2"/>
                                        <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
            <DockPanel Grid.Column="2" Grid.Row="1">
                <GroupBox Header="Filter &amp; Control" DockPanel.Dock="Top" Margin="0,0,0,6" Padding="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="Data Type : " Margin="2" Name="__chk_enable_data_type_name_filter" Click="__on_enable_data_type_name_filter_click"/>
                        <CheckBox Content="Variable Name : " Margin="2" Grid.Row="1" Name="__chk_enable_variable_name_filter" Click="__on_enable_variable_name_filter_click"/>
                        <CheckBox Content="Binding Module : " Margin="2" Grid.Row="2" Name="__chk_enable_binding_module_name_filter" Click="__on_enable_binding_module_name_filter_click"/>

                        <TextBox Grid.Column="1" Margin="2" Text="{Binding FilterDataTypeName, UpdateSourceTrigger=Explicit}" IsEnabled="{Binding ElementName=__chk_enable_data_type_name_filter, Path=IsChecked}" KeyDown="__on_new_filter_data_type_name_enter"/>
                        <TextBox Grid.Column="1" Margin="2"  Grid.Row="1" Text="{Binding FilterVariableName, UpdateSourceTrigger=Explicit}" IsEnabled="{Binding ElementName=__chk_enable_variable_name_filter, Path=IsChecked}" KeyDown="__on_new_filter_variable_name_enter"/>
                        <TextBox Grid.Column="1" Margin="2"  Grid.Row="2" Text="{Binding FilterModuleName, UpdateSourceTrigger=Explicit}" IsEnabled="{Binding ElementName=__chk_enable_binding_module_name_filter, Path=IsChecked}" KeyDown="__on_new_filter_binding_module_name_enter"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Available Objects" Padding="6">
                    <ListView Name="__lsv_object_collection"  SelectionMode="Single" ContextMenu="{StaticResource ObjectContextMenu}" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="100" HeaderTemplate="{StaticResource IndexHeadTemplate}" CellTemplate="{StaticResource IndexContentTemplate}"/>
                                <GridViewColumn Width="200" HeaderTemplate="{StaticResource VariableNameHeadTemplate}" CellTemplate="{StaticResource VariableNameContentTemplate}"/>
                                <GridViewColumn Width="100" HeaderTemplate="{StaticResource DataTypeHeadTemplate}" CellTemplate="{StaticResource DataTypeContentTemplate}"/>
                                <GridViewColumn Width="100" HeaderTemplate="{StaticResource UnitHeadTemplate}" CellTemplate="{StaticResource UnitContentTemplate}"/>
                                <GridViewColumn Width="200" HeaderTemplate="{StaticResource BindingHeadTemplate}" CellTemplate="{StaticResource BindingContentTemplate}"/>
                                <GridViewColumn Width="120" HeaderTemplate="{StaticResource RangeHeadTemplate}" CellTemplate="{StaticResource RangeContentTemplate}"/>
                                <GridViewColumn Width="120" HeaderTemplate="{StaticResource ConverterHeadTemplate}" CellTemplate="{StaticResource ConverterContentTemplate}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>
