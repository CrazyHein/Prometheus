<UserControl x:Class="AMEC.PCSoftware.RemoteConsole.CrazyHein.Prometheus.ARK.Controls.InitializationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sync="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             xmlns:common="clr-namespace:AMEC.PCSoftware.RemoteConsole.CrazyHein.Prometheus.ARK.Controls.Common"
             xmlns:napishtim="clr-namespace:AMEC.PCSoftware.RemoteConsole.CrazyHein.Prometheus.ARK.Napishtim"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=FluentDark}">
    <TabControl>
        <TabControl.Resources>
            <common:ComponentStateVisibility x:Key="ComponentStateVisibility"/>
            <common:ComponentStateImage x:Key="ComponentStateImage"/>
        </TabControl.Resources>
        <TabItem Width="250">
            <TabItem.CommandBindings>
                <CommandBinding Command="common:Command.Add" Executed="AddRecordCommand_Executed" CanExecute="AddRecordCommand_CanExecute"/>
                <CommandBinding Command="common:Command.Insert" Executed="InsertRecordCommand_Executed" CanExecute="InsertRecordCommand_CanExecute"/>
                <CommandBinding Command="common:Command.Remove" Executed="RemoveRecordCommand_Executed" CanExecute="RemoveRecordCommand_CanExecute"/>
            </TabItem.CommandBindings>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/imgs/initial_values.png" Width="25" Margin="2"/>
                    <TextBlock Text="Initialization Configuration" VerticalAlignment="Center" Margin="6,0,0,0"/>
                    <Image Width="20" Margin="16,0,0,0">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource ComponentStateVisibility}">
                                <Binding Path="Modified"/>
                                <Binding Path="Validated"/>
                            </MultiBinding>
                        </Image.Visibility>
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource ComponentStateImage}">
                                <Binding Path="Modified"/>
                                <Binding Path="Validated"/>
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                </StackPanel>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0" Margin="0,4,0,0">

                    <GroupBox.Header>
                        <TextBlock Text="User Variables Initial Values" FontSize="16"/>
                    </GroupBox.Header>
                    <Grid Margin="2,8,2,2">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.Resources>
                            <common:GenericRecordBackgroundBrush x:Key="GenericRecordBackgroud"/>
                            <DataTemplate x:Key="UserVariableInitialValueDragDropTips">
                                <Border Padding="8" BorderBrush="White" Background="OrangeRed" BorderThickness="2" CornerRadius="4">
                                    <TextBlock Text="{Binding DraggingRecords[0]}" Margin="4, 0"/>
                                </Border>
                            </DataTemplate>
                        </Grid.Resources>
                        <sync:SfDataGrid x:Name="sfUserVariableInitialValuesViewer" ItemsSource="{Binding UserVariableInitialValues}" Margin="2,8,2,2" AllowSorting="False" AllowResizingColumns="True" AutoGenerateColumns="False" ColumnSizer="AutoLastColumnFill" ShowRowHeader="True"
                                         SelectionUnit="Row" AllowDraggingRows="True" AllowDrop="True" RowDragDropTemplate="{StaticResource UserVariableInitialValueDragDropTips}">
                            <sync:SfDataGrid.Resources>
                                <Style TargetType="sync:GridCell" BasedOn="{StaticResource SyncfusionGridCellStyle}">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <Binding Path="IsValid" Converter="{StaticResource GenericRecordBackgroud}"/>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </sync:SfDataGrid.Resources>
                            <sync:SfDataGrid.Columns>
                                <sync:GridTextColumn MappingName="Name" HeaderText="Name" AllowEditing="True"/>
                                <sync:GridTextColumn MappingName="ValueString" HeaderText="Value" AllowEditing="True"/>
                                <sync:GridTextColumn MappingName="Comment" HeaderText="Comment" AllowEditing="True"/>
                            </sync:SfDataGrid.Columns>
                        </sync:SfDataGrid>
                        <UniformGrid Grid.Row="1" Columns="3">
                            <sync:ButtonAdv Label="Add" Height="30" Margin="2,2,4,0" Command="common:Command.Add" CommandParameter="UserVariableInitialValues">
                                <sync:ButtonAdv.SmallIcon>
                                    <BitmapImage  UriSource="/imgs/add.png"/>
                                </sync:ButtonAdv.SmallIcon>
                            </sync:ButtonAdv>
                            <sync:ButtonAdv Label="Insert Before" Height="30" Margin="4,2,4,0" Command="common:Command.Insert" CommandParameter="UserVariableInitialValues">
                                <sync:ButtonAdv.SmallIcon>
                                    <BitmapImage  UriSource="/imgs/insert_before.png"/>
                                </sync:ButtonAdv.SmallIcon>
                            </sync:ButtonAdv>
                            <sync:ButtonAdv Label="Remove"  Height="30" Margin="4,2,4,0" Command="common:Command.Remove"  CommandParameter="UserVariableInitialValues">
                                <sync:ButtonAdv.SmallIcon>
                                    <BitmapImage  UriSource="/imgs/remove.png"/>
                                </sync:ButtonAdv.SmallIcon>
                            </sync:ButtonAdv>
                        </UniformGrid>
                    </Grid>
                </GroupBox>
            </Grid>
        </TabItem>
        <TabItem Width="150">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/imgs/summary.png" Width="25" Margin="2"/>
                    <TextBlock Text="Summary" VerticalAlignment="Center" Margin="6,0,0,0"/>
                </StackPanel>
            </TabItem.Header>
            <ScrollViewer Padding="4" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding Summary}" FontSize="16"/>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</UserControl>
