<Window x:Class="AMEC.PCSoftware.RemoteConsole.CrazyHein.Prometheus.ARK.Controls.Common.SummaryViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMEC.PCSoftware.RemoteConsole.CrazyHein.Prometheus.ARK.Controls.Common"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        mc:Ignorable="d"
        syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=FluentDark}"
        Title="Summary" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Bottom" Click="Button_Click" Content="OK" Margin="4" Height="30"/>
        <ScrollViewer Margin="4" VerticalScrollBarVisibility="Auto">
            <TextBlock Name="txtSummaryContent" FontSize="16"/>
        </ScrollViewer>
    </DockPanel>
</Window>
